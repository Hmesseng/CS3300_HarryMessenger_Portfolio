<div class="p-5 text-center bg-white">
    <h4 class="mb-2">
        Welcome to my Portfolio!
        <br>Here are all of my Projects!
    </h4>
  </div>
<div class="card">
  
  <div class="card-header bg-warning">
    
    <h2 class='card-title text-dark justify-content-between mb-1'>
      Projects
    </h2>

  
  </div>
  
  <div class="card-body bg-primary">
    <table style="width:100%;">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
        
          <tr>
            <td><%= project.title%></td>
            <td><%= project.description%></td>
            <td style="width:5%;"><%= link_to 'Show', project, class: 'btn btn-warning' %></td>
            <td style="width:5%;"><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-warning' %></td>
            <td style="width:5%;"><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %></td>
          </tr>
        <% end %>
      </tbody>
    </table> 
  </div>
  
  <div class="card-footer bg-warning">
    <td style="height:500px"><%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %></td>
  </div> 
</div>
